---
import Card from "./Card.astro";
import { fetchAPI } from "../services/fetchRickAndMorty";

const { results } = await fetchAPI(1);
---

<div class="container-card">
  {results.map((character) => <Card character={character} />)}
</div>

<style>
  .container-card {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    gap: 10px;
    align-items: center;
    justify-content: center;
  }
</style>
